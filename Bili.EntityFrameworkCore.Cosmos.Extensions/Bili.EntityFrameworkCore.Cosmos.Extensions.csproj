<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Bili</Authors>
    <Description>Extension that provides an easy extension method to authenticate to CosmosDb using default credentials. No need to manage CosmosDb access keys.</Description>
    <PackageProjectUrl>https://github.com/felipmiguel/Bili.EntityFrameworkCore.Cosmos.Extensions</PackageProjectUrl>
    <RepositoryUrl>https://github.com/felipmiguel/Bili.EntityFrameworkCore.Cosmos.Extensions</RepositoryUrl>
    <RepositoryType>Public</RepositoryType>
    <PackageTags>CosmosDb EntityFramework EF Authentication DefaultAzureCredential</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>1.0.2</Version>
    <PackageReleaseNotes>Provides additional methods to control the TokenCredential used. Solves the scenario in the development workstation when the developer account has access to more than one tenant.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Identity" Version="1.4.1" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Cosmos" Version="5.0.10" />
  </ItemGroup>

</Project>
